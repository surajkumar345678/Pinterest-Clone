<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image" id="">
        </form>
        <div class="profdets flex flex-col items-center mt-20">
            <div class="relative">
                <span id="uploadicon"
                    class="hover:cursor-pointer w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <span class="material-symbols-outlined text-zinc-800">
                        edit
                    </span>

                </span>
                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover"
                        src="https://images.unsplash.com/photo-1560343776-97e7d202ff0e?q=80&w=1335&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        alt="">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5">Suraj Kumar</h1>
            <h3 class="text-md">@username</h3>
            <a href="/edit" class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-5">Edit</a>
            <button class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-10">Add New Post</button>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10">
            <div class="card">
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover"
                        src="https://images.unsplash.com/photo-1525547719571-a2d4ac8945e2?q=80&w=1364&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        alt="">
                </div>
                <h3 class="text-xl font-semibold mt-3">All Pins</h3>
                <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
            </div>
        </div>

    </div>

    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click();
        })

        document.querySelector("#uploadform input").addEventListener("change", function(){
            document.querySelector("#uploadform").submit();
        })

    </script>


